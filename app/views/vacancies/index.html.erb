<h1>Список вакансий</h1>

<%= form_tag vacancies_path, :method => :get do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Искать по названию", :name => nil %>
<% end %>

<%= form_tag destroy_multiple_vacancies_path, method: :delete do %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Название</th>
        <th>Дата создания</th>
        <th>Срок действия</th>
        <th>Зарплата</th>
        <th>Контакты</th>
        <th>Умения</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= render @vacancies %>
    </tbody>
  </table>
  <%= submit_tag "Delete selected", data: {confirm: 'Are you sure?'} %>|
  <%= link_to 'New Vacancy', new_vacancy_path %>
<% end %>

<%= will_paginate @vacancies, renderer: BootstrapPagination::Rails, class: "pagination-sm" %>

