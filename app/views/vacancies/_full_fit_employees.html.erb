<% j "pagination" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-md-1"></th>
      <th class="col-md-1">ФИО</th>
      <th class="col-md-1">Контакты</th>
      <th class="col-md-1">Статус</th>
      <th class="col-md-1">Зарплата</th>
      <th class="col-md-6">Умения</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <h3>Полное совпадение</h3>
    <% if @employees_all.count > 0 %>
      <% @employees_all.each do |employee| %>
        <tr>
          <td><%= image_tag employee.avatar_url(:thumb) if employee.avatar? %></td>
          <td><%= employee.name %></td>
          <td><%= contacts(employee) %></td>
          <td><%= employee.status %></td>
          <td><%= employee.salary %></td>
          <td><%= skills(employee) %></td>
          <td><%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, employee, :target => "_blank" %></td> 
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


<%= paginate @employees_all, :param_name => "full_fit_page" %>