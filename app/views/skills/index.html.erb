<h1>Каталог умений</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>Название</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.id %></td>
        <td><%= skill.name %></td>
        <td><%= link_to 'Show', skill %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_skill_path(skill) %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

